# ================================
# DATABASE CONFIGURATION
# ================================
DB_HOST=db
DB_NAME=moonlit
DB_USER=moonlit_user
DB_PASSWORD=your_secure_password_here
DB_ROOT_PASSWORD=your_root_password_here
DB_PORT=3306

# ================================
# APPLICATION CONFIGURATION
# ================================
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080

# API Configuration
API_BASE_URL=http://localhost:8080/dashboard/api.php

# ================================
# SITE INFORMATION
# (These will be stored in database, but can be overridden here for initial setup)
# ================================
SITE_NAME="Moonlit Detailing"
SITE_URL=http://localhost:8080

# ================================
# DOCKER PORT MAPPING
# ================================
# Port for web server (access application on http://localhost:WEB_PORT)
WEB_PORT=8080

# Port for database (access from host machine via localhost:DB_EXTERNAL_PORT)
DB_EXTERNAL_PORT=3307

# ================================
# PHP CONFIGURATION
# ================================
PHP_VERSION=8.3
PHP_MEMORY_LIMIT=256M
PHP_UPLOAD_MAX_FILESIZE=20M
PHP_POST_MAX_SIZE=20M

# ================================
# PRODUCTION OVERRIDES
# (Copy this file to .env and update these values for production)
# ================================
# PROD_DB_HOST=your_production_db_host
# PROD_DB_NAME=your_production_db_name
# PROD_DB_USER=your_production_db_user
# PROD_DB_PASSWORD=your_production_db_password
# PROD_APP_URL=https://moonlit.trusttino.com
# PROD_API_BASE_URL=https://moonlit.trusttino.com/dashboard/api.php
